#!/bin/sh

set -e

cd "$(dirname "$(readlink -f "$0")")"

if ! [ -f OVMF.fd ]
then
    echo "Fetching OVMF binaries."

    wget "http://downloads.sourceforge.net/project/edk2/OVMF/OVMF-X64-r15214.zip?use_mirror=netassist" -O OVMF.zip || \
        curl -SL "http://downloads.sourceforge.net/project/edk2/OVMF/OVMF-X64-r15214.zip?use_mirror=netassist" -o OVMF.zip

    unzip OVMF.zip
    rm OVMF.zip
fi

