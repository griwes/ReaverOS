#pragma once

#include "__config"
#include "version"

__ROSESTD_OPEN

using size_t = decltype(sizeof(0));
using ptrdiff_t = decltype(static_cast<char *>(nullptr) - static_cast<char *>(nullptr));
using nullptr_t = decltype(nullptr);

__ROSESTD_CLOSE

#define offsetof(t, m) __builtin_offsetof(t, m)

